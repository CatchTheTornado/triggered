{
    "trigger_type": "ai",
    "trigger_config": {
        "name": "config-demo-trigger",
        "prompt": "Check if the message from config is 'Hello World'. Use the config_demo tool to get the message.",
        "interval": 60,
        "tools": [{
            "type": "config_demo",
            "key": "message"
        }]
    },
    "action_type": "shell",
    "action_config": {
        "name": "config-demo-action",
        "command": "echo 'Message from config: ${message}'"
    },
    "params": {
        "message": "Hello World"
    }
} 