{
  "trigger": {
    "type": "ai",
    "config": {
      "name": "vscode-monitor",
      "prompt": "Check if VS Code is running",
      "tools": [{
        "type": "process_checker",
        "config": {
          "process_name": "Code"
        }
      }]
    }
  },
  "action": {
    "type": "shell",
    "config": {
      "command": "echo 'VS Code is running!'"
    }
  }
} 